  enable = true;
  profiles = {
   "main-horizontal" = {
    fingerprint = {
     DP-0 = "";
     HDMI-0 = "";
     };
    config = {
     HDMI-0 = {
      enable = true;
      crtc = 0;
      primary = false;
      position = "0x0";
      mode = "1920x1080";
      gamma = "0.95:0.95:0.95";
      rate = "60.00";
      rotate = "normal";
     };
     DP-0 = {
      enable = true;
      crtc = 0;
      primary = true;
      position = "1920x0";
      mode = "1920x1080";
      #gamma = "1.0:0.909:0.833";
      rate = "240.00";
      rotate = "normal";
     };
     HDMI-1.enable = false;
     DP-1.enable = false;
     DP-2.enable = false;
     DP-3.enable = false;
    };
   };
  };
 };
 
 home.packages = [
  pkgs.autorandr
  pkgs.arandr
 ];
}
